{% extends 'base.html.twig' %}

{% block title %}Modifier un produit {% endblock %}

{% block body %}

	

	<div class="container m-auto w-50">

		<h1 class="text-center mt-4 mb-4">Modifier le produit</h1>


	{{ form_start(form) }}
	{# {{ form_widget(form) }} #}

	{{ form_row(form.description) }}
	{{ form_row(form.nom) }}
	{{ form_row(form.reference, {'label': 'Référence'}) }}
	{{ form_row(form.EAN, {'label': 'EAN'}) }}
	{{ form_row(form.photo) }}


	{{ form_end(form) }}

	</div>

	<div class="container mb-5 text-center">
		<a href="/produit" ><input class="btn btn-light" type="submit" name="retour" value="Revenir à la liste des produits"></a>
	</div>

{% endblock %}