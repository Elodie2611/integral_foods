{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}

	<h1 class="text-center mb-5 mt-5">Panier</h1>

	<div class="container table-responsive">


	<div class="container table-responsive">

		<table class="table table-hover text-center">
		  <thead>
		    <tr>
		      <th scope="col">Nom</th>
		      <th scope="col">Prix</th>
		      <th scope="col">Quantité</th>

		    </tr>
		  </thead>
		  <tbody class="text-center">
				<form action="/AjoutCommande" method="post" name="AjoutComm">
		  	{% for leProduit in panier %}
			    <tr>
			      <td>{{ leProduit.nom }} </td>
			      <td>{{ leProduit.prix }} €</td>
			      <td><input name="{{ leProduit.id }}" id="{{ leProduit.id }}" type="number" value="{{ leProduit.quantite }}"></td>
			    </tr>
			{% endfor %}
		  </tbody>
		</table>
		<<button type="submit" name="button" class="btn btn-success"></button>
	</form>
	</div>

