{% extends 'base.html.twig' %}


{% block title %}Nos catégories{% endblock %}


{% block body %}

	<h1 class="text-center mb-5 mt-5">Liste des catégories</h1>

	<div class="container table-responsive">

		{% if categories %}
		<table class="table table-hover text-center">
		  <thead>
		    <tr>
		      <th scope="col">Libellé</th>
{# ajout d'une case #}
		      <th scope="col">Image</th>
		      <th scope="col">Modifier</th>
		      <th scope="col">Supprimer</th>
		    </tr>
		  </thead>
		  <tbody class="text-center">
		  	{% for categorie in categories %}
			    <tr>
			      <td>{{ categorie.libelle }} </td>
{# modification de l'affichage de l'image en dynamique et du alt dans la balise img #}
			      <td><img src="{{ asset('uploads/') ~ categorie.photo }}" class="figure-img img-fluid rounded" alt="A generic square placeholder image with rounded corners in a figure."></td>
			      <td>
			      	<a class="btn btn-sm btn-success" href="/categorie/modifier_categorie/{{ categorie.id }}">Modifier</a>
			      </td>
			      <td>
			      	<a class="btn btn-sm btn-danger" href="/categorie/supprimer_categorie/{{ categorie.id }}">Supprimer</a>
			      </td>
			    </tr>
			{% endfor %}
		  </tbody>
		</table>
		{% else %}
			Pas de catégories à afficher.
		{% endif %}

	</div>

	<div class="container mb-5 text-center">
		<a class="btn btn-success" href="/categorie/ajouter_categorie">Ajouter une nouvelle catégorie</a>
	</div>

	<div class="container mb-5 text-center">
		<a href="/../utilisateur" class="btn btn-light">Afficher les utilisateurs</a>
		<a href="/../produit" class="btn btn-light">Afficher les produits</a>
		<a href="/../prix" class="btn btn-light">Afficher les prix</a>
	</div>

{% endblock %}
